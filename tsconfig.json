{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "@types"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["src/**/*", "prisma/**/*", "src/types/index.d.ts"],
}
